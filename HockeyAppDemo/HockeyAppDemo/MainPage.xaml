<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HockeyAppDemo"
             x:Class="HockeyAppDemo.MainPage">

  <StackLayout Spacing="50"
               Padding="10,50">
    <Label Text="HockeyApp"
           FontSize="60"
           TextColor="Accent"/>
    <Button Text="Track Event"
            FontSize="40"
            BackgroundColor="Accent"
            TextColor="White"
            Clicked="TackEvent_Clicked"/>
    <Button Text="Crash App"
            FontSize="50"
            BackgroundColor="Accent"
            TextColor="White"
            Clicked="CrashApp_Clicked"/>
    <Label x:Name="DidCrashLabel" 
           Text="DidCrashInLastSession: ?"
           FontSize="24"
           TextColor="Accent"/>
  </StackLayout>


</ContentPage>